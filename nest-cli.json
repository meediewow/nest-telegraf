{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/bot-core/src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/bot-core/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/bot-core",
  "projects": {
    "bot-core": {
      "type": "application",
      "root": "apps/bot-core",
      "entryFile": "main",
      "sourceRoot": "apps/bot-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bot-core/tsconfig.app.json"
      }
    },
    "captcha": {
      "type": "application",
      "root": "apps/captcha",
      "entryFile": "main",
      "sourceRoot": "apps/captcha/src",
      "compilerOptions": {
        "tsConfigPath": "apps/captcha/tsconfig.app.json"
      }
    },
    "protobufs": {
      "type": "library",
      "root": "libs/protobufs",
      "entryFile": "index",
      "sourceRoot": "libs/protobufs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/protobufs/tsconfig.lib.json",
        "watchAssets": true,
        "assets": ["**/*.proto"]
      }
    }
  }
}
